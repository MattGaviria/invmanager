@model IEnumerable<invmanager.Models.Product>

@{
    ViewData["Title"] = "Add to Cart";
}

<h2>@ViewData["Title"]</h2>

<div class="container">
    <h3>Products</h3>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <!-- Remove the image part since there is no image URL -->
                    <div class="card-body">
                        <h5 class="card-title">@product.ProductName</h5>
                        <p class="card-text">Price: @product.ProductPrice.ToString("C")</p>
                        <!-- Form for adding the product to the cart -->
                        <form asp-action="AddToCart" method="post">
                            <input type="hidden" name="productId" value="@product.ProductId" />
                            <button type="submit" class="btn btn-primary">Add to Cart</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Redirect to the Checkout page (Order Summary) -->
<a href="@Url.Action("OrderSummary", "Order")" class="btn btn-success">Go to Checkout</a>