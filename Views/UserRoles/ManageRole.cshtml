@model invmanager.Models.UserRolesViewModel

@{
    ViewData["Title"] = "Manage Roles for @Model.UserName";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <input type="hidden" name="UserId" value="@Model.UserId" />

    <div class="mb-3">
        <label class="form-label">User: @Model.UserName</label>
    </div>

    <div class="mb-3">
        <label class="form-label">Select Role:</label>
        <select class="form-control" name="SelectedRoles">
            @foreach (var role in Model.AvailableRoles)
            {
            bool isSelected = Model.SelectedRoles.Contains(role);
            if (isSelected)
            {
            <option value="@role" selected>@role</option>
            }
            else
            {
            <option value="@role">@role</option>
            }
            }
        </select>

    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>