@model List<Product>

<h2>Select Products</h2>

<form method="post" asp-action="CreateOrder" asp-controller="GuestOrder">

    <table class="table">
        <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity
            <th>Current Stock</th>
            <th>Select</th>
        </tr>
        </thead>
        <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Model[i].ProductName</td>
                <td>$@Model[i].ProductPrice</td>
                <td>
                    <input type="number" name="quantities" value="1" min="1" class="form-control" />
                </td>
                <td>@Model[i].Quantity
                
                    </td>
                <td>
                    <input type="checkbox" name="productIds" value="@Model[i].ProductId" />
                </td>
            </tr>
        }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Create Order</button>
    <a asp-action="OrderHistory" class="btn btn-primary">Order History</a>
    
</form>