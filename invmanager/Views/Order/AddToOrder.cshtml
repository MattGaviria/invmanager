@model invmanager.Models.Product

@{
    ViewData["Title"] = "Add to Order";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h3>Product Details</h3>
    <p><strong>Name:</strong> @Model.ProductName</p>
    <p><strong>Quantity:</strong> @Model.Quantity</p>
    <p><strong>Price:</strong> @Model.ProductPrice</p>

    <form method="post" asp-action="AddToOrderConfirmed" asp-route-id="@Model.ProductId">
        <button type="submit" class="btn btn-primary">Add to Order</button>
    </form>
</div>