@model IEnumerable<Product>

@{
    ViewBag.Title = "Search & Filter";
    Layout = "_Layout";
}

<div class="container">
    <h2 class="text-center">@ViewBag.Title</h2>

    <!-- Search & Filter Form -->
    <form asp-action="SearchAndFilter" method="get" class="mb-4">
        <div class="row">
            
            <div class="col-md-4">
                <label for="query">Search</label>
                <input type="text" name="query" id="query" class="form-control" placeholder="Enter product name...">
            </div>

            <!-- Category -->
            <div class="col-md-4">
                <label for="category">Category</label>
                <select name="category" id="category" class="form-control">
                    <option value="">All Categories</option>
                    <option>Clothing</option>
                    <option>Shoes</option>
                    <option>Electronics</option>
                </select>
            </div>

            <!-- Sort -->
            <div class="col-md-4">
                <label for="sortBy">Sort By</label>
                <select name="sortBy" id="sortBy" class="form-control">
                    <option value="Name">Name</option>
                    <option value="Price">Price</option>
                    <option value="Quantity">Quantity</option>
                </select>
            </div>
        </div>

        <div class="row mt-3">
            <!-- Min Price -->
            <div class="col-md-3">
                <label for="minPrice">Min Price</label>
                <input type="number" name="minPrice" id="minPrice" class="form-control" placeholder="Min price">
            </div>

            <!-- Max Price -->
            <div class="col-md-3">
                <label for="maxPrice">Max Price</label>
                <input type="number" name="maxPrice" id="maxPrice" class="form-control" placeholder="Max price">
            </div>

            <!-- Low Stock -->
            <div class="col-md-3">
                <label class="d-block">Low Stock</label>
                <input type="checkbox" name="lowStock" class="form-check-input" value="true">
                <span> Show only low stock</span>
            </div>

            <!-- Submit Button -->
            <div class="col-md-3 text-right">
                <label class="d-block">&nbsp;</label>
                <button type="submit" class="btn btn-primary btn-block">Apply Filters</button>
            </div>
        </div>
    </form>
    

    <hr>

    <!-- Product List -->
    @if (Model != null && Model.Any())
    {
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Stock</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.ProductCategory</td>
                    <td>@product.ProductPrice</td>
                    <td>@product.Quantity</td>
                </tr>
            }
            </tbody>
            
        </table>
        <div class="text-center">
            <a asp-action="Index" class="btn btn-primary">Return to Products </a>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">No products available.</div>
        <div class="text-center">
            <a asp-action="Index" class="btn btn-primary">Return to Products</a>
        </div>
    }
</div>
