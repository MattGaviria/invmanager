@model Product

@{
    ViewBag.Title = "Delete Product";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">

                    <div class="text-center mb-4">
                        <h2 class="text-danger fw-bold">@ViewBag.Title</h2>
                        <p class="text-muted">Are you sure you want to delete this product?</p>
                    </div>

                    <hr />

                    <dl class="row">
                        <dt class="col-sm-4 fw-semibold">Product Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductName)</dd>
                        <hr />

                        <dt class="col-sm-4 fw-semibold">Product Category</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductCategory)</dd>
                        <hr />

                        <dt class="col-sm-4 fw-semibold">Price</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductPrice)</dd>
                        <hr />

                        <dt class="col-sm-4 fw-semibold">Quantity</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Quantity)</dd>
                        <hr />
                    </dl>

                    <form asp-action="Delete" method="post" class="mt-4 d-flex justify-content-between">
                        @Html.HiddenFor(model => model.ProductId)
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>